        <a class="hover:bg-white/10 rounded-full px-3 py-1 transition text-base md:text-sm" href="#tecnologias">{translate('header.tecnologias')}</a>
        <a class="hover:bg-white/10 rounded-full px-3 py-1 transition text-base md:text-sm" href="#proyectos">{translate('header.proyectos')}</a>
        <a class="hover:bg-white/10 rounded-full px-3 py-1 transition text-base md:text-sm" href="#sobre_mi">{translate('header.sobremi')}</a>
